extends layout

block content
  div#graph(style='min-width: 400px; height: 400px; margin: 0 auto;')
    p Looks like your browser don't support Javascript and the Highcharts library. I'll give you the raw data.
    pre #{data}
  script 
      Highcharts.setOptions({global:{useUTC: false}});
      $('#graph').highcharts({
            title: {
                text: 'Pulse'
            },

            subtitle: {
                text: 'Source: Sensor on Electric Imp'
            },

            xAxis: {
                title: { text: 'Time' },
                type: 'datetime',
                tickWidth: 0,
                gridLineWidth: 1,
                labels: {
                    align: 'left',
                    x: 3,
                    y: -3
                }
            },

            yAxis: [{ // left y axis
                title: {
                    text: '-'
                },
                labels: {
                    align: 'left',
                    x: 3,
                    y: 16,
                    formatter: function() {
                        return Highcharts.numberFormat(this.value, 0);
                    }
                },
                showFirstLabel: false
            }],

            legend: {
                align: 'left',
                verticalAlign: 'top',
                y: 20,
                floating: true,
                borderWidth: 0
            },

            tooltip: {
                shared: true,
                crosshairs: true
            },

            plotOptions: {
                series: { }
            },

            series: [{
                name: 'Pulse',
                lineWidth: 1,
                marker: {
                    radius: 2
                },
                data: #{data}
             }]
        });
